{
  "name": "aUI",
  "version": "1.0.0",
  "main": "app/app.js",
  "scripts": {
    "prebuild": "npm run build:clean",
    "build": "cross-env NODE_ENV=production webpack --config ./webpack.config.js --color -p --progress",
    "build:clean": "npm run test:clean && rimraf ./build",
    "start": "webpack-dev-server --config ./webpack.config.js",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:stylelint": "stylelint",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:css": "npm run lint:stylelint -- \"app/**/components/**/*.js\"",
    "lint:staged": "lint-staged",
    "pretest": "npm run test:clean",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:ci": "npm run test -- --ci --no-cache --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "precommit": "npm run lint:staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "lint-staged": {
    "*.js": "lint:eslint",
    "app/**/components/**/*.js": "lint:stylelint"
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!app/**/*.test.{js,jsx}",
      "!app/*/RbGenerated*/*.{js,jsx}",
      "!app/app.js",
      "!app/routes.js"
    ],
    "coveragePathIgnorePatterns": [
      "\\/Loadable\\.js$",
      "utils\\/helpers\\/.*\\.js$",
      "\\/types\\.js$",
      "\\/stories\\.js$"
    ],
    "moduleDirectories": [
      "node_modules",
      "app"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "__tests__/.*\\.test\\.js$"
  },
  "repository": "https://github.com/arthur791004/aUI.git",
  "author": "arthur <arthur791004>",
  "license": "MIT",
  "dependencies": {
    "polished": "^1.3.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "styled-components": "^2.1.2"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.4",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.2.0",
    "eventsource-polyfill": "^0.9.6",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.3",
    "react-hot-loader": "next",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "stylelint": "^8.0.0",
    "stylelint-processor-styled-components": "^0.2.2",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1",
    "webpack-hot-middleware": "^2.18.2"
  }
}
